{
  "compilerOptions": {
    /* Existing configurations */

    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

        /* Strict Type Checking Options */
        "noImplicitAny": true,              /* Enable error reporting for implicit 'any' types */
        "strictNullChecks": true,           /* Ensure strict checking of 'null' and 'undefined' values */
        "strictFunctionTypes": true,        /* Ensure function parameters and return types are strictly checked */
        "strictBindCallApply": true,        /* Check the consistency of 'bind', 'call', and 'apply' methods */
        "strictPropertyInitialization": true, /* Ensure class properties are initialized in the constructor */
        "noImplicitThis": true,             /* Catch 'this' being used with an implicit 'any' type */
        "alwaysStrict": true,               /* Ensure 'use strict' is added in every file */
    
        /* Additional Error-Checking Options */
        "noUnusedLocals": true,             /* Report errors for unused local variables */
        "noUnusedParameters": true,         /* Report errors for unused function parameters */
        "noImplicitReturns": true,          /* Report errors for missing return statements in functions */
        "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statements */
        "noUncheckedIndexedAccess": true,   /* Add 'undefined' to a type when accessing an index that could be missing */
        "noImplicitOverride": true,         /* Ensure 'override' keyword is used when overriding a method */
        "exactOptionalPropertyTypes": true,

    /* Adding baseUrl and paths for path aliases */
    "baseUrl": "./src",    /* Base directory for non-relative module imports */
    "paths": {
      "@controllers/*": ["controllers/*"],  /* Alias for 'src/controllers' */
      "@entities/*": ["entities/*"],            /* Alias for 'src/models' */
      "@utils/*": ["utils/*"],              /* Alias for 'src/utils' */
      "@services/*": ["services/*"],        /* Alias for 'src/services' */
      "@config/*": ["config/*"]     ,
      "@repositories/*": ["repositories/*"],
      "@helpers/*": ["helpers/*"],
      "@dtos/*": ["dtos/*"],
      "@middlewares/*": ["middlewares/*"],
      "@interfaces/*": ["interfaces/*"],
      "@routes/*": ["routes/*"],
      "@shares/*": ["shares/*"],

    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
